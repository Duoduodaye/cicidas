# AI News Configuration
# Copy this to .env and fill in your actual values

# NewsAPI Key from https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Update settings
UPDATE_FREQUENCY=daily  # daily, hourly, or custom
MAX_ARTICLES=15         # Maximum articles to fetch
LANGUAGES=es,en         # Languages to fetch (es=Spanish, en=English)

# Feature flags
ENABLE_RSS_FEEDS=true   # Enable RSS feed fetching
ENABLE_TRENDING=true    # Enable trending topics
DEBUG_MODE=false        # Enable debug output